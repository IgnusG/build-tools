{
    "name": "@workspace/root",
    "private": true,
    "type": "module",
    "engines": {
        "node": "19.0.0"
    },
    "scripts": {
        "prepare-local": "./prepare.ts",
        "each": "yarn workspaces foreach --verbose --parallel run",
        "each:dev": "yarn workspaces foreach --verbose --parallel --interlaced run",
        "format": "prettier -w . && eslint --fix .",
        "lint": "python ./.tools/pre-commit.pyz run",
        "check-dependencies": "yarn install --check-cache",
        "change:create": "changeset",
        "change:version": "changeset version",
        "change:publish": "yarn each build && changeset publish"
    },
    "packageManager": "yarn@4.0.0-rc.27",
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@changesets/changelog-github": "0.4.4",
        "@changesets/cli": "2.22.0",
        "@changesets/types": "5.2.0",
        "@types/node": "18.11.9",
        "@typescript-eslint/eslint-plugin": "5.42.0",
        "@typescript-eslint/parser": "5.42.0",
        "@yarnpkg/pnpify": "4.0.0-rc.27",
        "eslint": "8.26.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-simple-import-sort": "8.0.0",
        "eslint-plugin-unused-imports": "2.0.0",
        "lint-staged": "13.0.3",
        "prettier": "2.7.1",
        "ts-node": "10.9.1",
        "typescript": "4.8.4",
        "zx": "7.1.1"
    },
    "dependenciesMeta": {
        "ts-node@10.9.1": {
            "unplugged": true
        }
    }
}
